# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Remove trailing whitespace characters preceding newline characters
[*.js]
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*]
charset = utf-8

# 2 space indentation
[*]
indent_style = space
indent_size = 2

# Allowed line length
max_line_length = 100
